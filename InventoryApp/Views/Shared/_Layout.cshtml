<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="@Url.Content("~/Content/ej/web/default-theme/ej.web.all.min.css")" rel="stylesheet" />
</head>


<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="border-bottom:.2rem solid #1C91D5;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Lem-Tech", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse " style="color:#9d9d9d;">
                <ul class="nav navbar-nav navbar-right nav-stacked">           
                    <li>@Html.ActionLink("Robert Galvan", "#", "#")</li>
                    <li><span class="glyphicon glyphicon-user"></span> User</li>
                    <li>@Html.ActionLink("Logout", "#", "#")</li>
                    @*this will logout the user*@
                    @*<li>@Html.ActionLink("Logout", "#", "#")</li>*@
                </ul>
            </div>
            </div>
        </div>

            <div  style="background-color:black">
               
                    <div class="col-md-3" style="align-content:flex-start;height:600px;">

                        <ul class="nav  navbar-fixed-side navbar-fixed-side-left ">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Employees", "Index", "Employees")</li>
                            <li>
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    Page 1
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Page 1-1</a></li>
                                    <li><a href="#">Page 1-2</a></li>
                                    <li><a href="#">Page 1-3</a></li>
                                </ul>
                            </li>
                            <li>@Html.ActionLink("Stores", "Index", "Stores")</li>
                            <li>@Html.ActionLink("Inventory", "Index", "Inventories")</li>

                        </ul>


                    </div>

               
            </div>

            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                </footer>
            </div>

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/jqueryval")
            @Scripts.Render("~/bundles/jqueryui")
            @Scripts.Render("~/bundles/bootstrap")


            @RenderSection("scripts", required: false)


            <script src="@Url.Content("~/Scripts/jsrender.min.js")"></script>

            <script src="@Url.Content("~/Scripts/ej/web/ej.web.all.min.js")"></script>

            <script src="@Url.Content("~/Scripts/ej/common/ej.unobtrusive.min.js")"></script>

            @Html.EJ().ScriptManager()

</body>
</html>
